 getwd()            -- Zeigt das Verzeichnis an in welchen wir uns                                            befinden.
 setwd('quelle')    -- Wechsel des Verzeichnises setwd('~/Downloads')                                        immer in ''.
 read.csv('quelle') -- cvs-Datei einlesen.
 subset(stateInfo, pobulation==3100)    --  stateInfo ist ein Datenset und pobulation ist ein 
